<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_height="0dp">
        <EditText
            android:id="@+id/habitgroupedit_title"
            android:layout_width="match_parent"
            android:hint="Title"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="match_parent"
            android:id="@+id/habitgroupedit_pickTime"
            android:text="Set start time"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="match_parent"
            android:id="@+id/habitgroupedit_pickWeekday"
            android:text="Pick weekdays"
            android:layout_height="wrap_content" />
        <ListView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@android:id/list"
            android:layout_height="0dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        style="?android:buttonBarStyle"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@android:string/cancel"
            android:id="@+id/habitgroupeditor_cancel"
            style="?android:buttonBarButtonStyle"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Delete"
            style="?android:buttonBarButtonStyle"
            android:id="@+id/habitgroupeditor_delete"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@android:string/ok"
            style="?android:buttonBarButtonStyle"
            android:id="@+id/habitgroupeditor_ok"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>